<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_send_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.swapnil.nfcdemo.SendImageActivity"
    android:background="@drawable/bg8">

  <!--  <ImageView
        android:id="@+id/imgView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >
    </ImageView>
-->


    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/button_custom"
        android:onClick="selectFile"
        android:padding="8dp"
        android:text="Select Image"
        android:textColor="@android:color/black"
        android:id="@+id/button3" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Send Image"
        android:onClick="sendFile"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/info"
        android:layout_toEndOf="@+id/info"
        android:layout_marginTop="425dp"
        android:textColor="@android:color/black"
        android:background="@drawable/button_custom"
        android:layout_alignParentLeft="true"
        android:visibility="invisible"
        android:layout_alignParentStart="true"
        android:id="@+id/button4"/>

  <TextView
      android:id="@+id/editText2"
      android:layout_width="wrap_content"
      android:layout_height="50dp"
      android:ems="10"
      android:inputType="textPersonName"
      android:text="Please click on Send Image button and tap to other NFC Device"
      android:textAppearance="@style/TextAppearance.AppCompat.Caption"
      android:textColorLink="@android:color/black"
      android:textSize="18sp"
      android:visibility="invisible"
      android:layout_below="@+id/button3"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_alignRight="@+id/gidLoadingId"
      android:layout_alignEnd="@+id/gidLoadingId" />


    <Button
        android:id="@+id/button2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text=""
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/a2"
        android:onClick="fnHome"/>

    <pl.droidsonroids.gif.GifTextView
        android:layout_width="300dp"
        android:layout_height="220dp"
        android:background="@drawable/circle1"
        android:id="@+id/gidLoadingId"
        android:visibility="invisible"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
